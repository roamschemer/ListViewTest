<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewTest.Views.MainPage"
             Title="ListViewTest">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="ListView" Command="{Binding PageChangeButton}" CommandParameter="ListViewPage"/>
        <Button Text="ListView ImageCell" Command="{Binding PageChangeButton}" CommandParameter="ImageCellPage"/>
        <Button Text="ListView ViewCell" Command="{Binding PageChangeButton}" CommandParameter="ViewCellPage"/>
    </StackLayout>
    
</ContentPage>